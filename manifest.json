{
  "manifest_version": 2,
  "name": "Scramble",
  "browser_specific_settings": {
    "gecko": {
      "id": "scramble@zlwaterfield.com",
      "strict_min_version": "42.0"
      }
    },
  "version": "1.0",
  "description": "An Open-Source Grammarly alternative",
  "icons": {
    "256": "assets/logo256.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://api.groq.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  }
}